{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cerber-core.dev/schemas/output.v1.json",
  "title": "Cerber Output",
  "description": "Deterministic output format from Cerber orchestrator",
  "type": "object",
  "required": ["schemaVersion", "contractVersion", "deterministic", "summary", "violations", "metadata"],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1,
      "description": "Output schema version (current: 1)"
    },
    "contractVersion": {
      "type": "integer",
      "const": 1,
      "description": "Contract version used for validation"
    },
    "deterministic": {
      "type": "boolean",
      "const": true,
      "description": "Output is deterministic (snapshot-testable)"
    },
    "summary": {
      "type": "object",
      "required": ["total", "errors", "warnings", "info"],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of violations"
        },
        "errors": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of error-level violations"
        },
        "warnings": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of warning-level violations"
        },
        "info": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of info-level violations"
        }
      },
      "additionalProperties": false
    },
    "violations": {
      "type": "array",
      "description": "All violations from all tools (deterministically sorted)",
      "items": {
        "type": "object",
        "required": ["id", "severity", "message", "source"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "description": "Stable rule ID (e.g., 'security/no-hardcoded-secrets')"
          },
          "severity": {
            "type": "string",
            "enum": ["error", "warning", "info"],
            "description": "Severity level"
          },
          "message": {
            "type": "string",
            "minLength": 1,
            "description": "Human-readable message"
          },
          "source": {
            "type": "string",
            "minLength": 1,
            "description": "Tool that generated violation (e.g., 'actionlint', 'zizmor')"
          },
          "path": {
            "type": "string",
            "description": "File path (relative to repo root, forward slashes)"
          },
          "line": {
            "type": "integer",
            "minimum": 1,
            "description": "Line number (1-indexed)"
          },
          "column": {
            "type": "integer",
            "minimum": 1,
            "description": "Column number (1-indexed)"
          },
          "hint": {
            "type": "string",
            "description": "Fix suggestion"
          },
          "toolOutput": {
            "description": "Original tool output (for debugging, NOT part of deterministic core)"
          }
        },
        "additionalProperties": false
      }
    },
    "metadata": {
      "type": "object",
      "required": ["tools"],
      "properties": {
        "tools": {
          "type": "array",
          "description": "Tools executed by orchestrator",
          "items": {
            "type": "object",
            "required": ["name", "version", "exitCode"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "description": "Tool name (e.g., 'actionlint', 'zizmor')"
              },
              "version": {
                "type": "string",
                "minLength": 1,
                "description": "Tool version (e.g., '1.6.27')"
              },
              "exitCode": {
                "type": "integer",
                "description": "Tool exit code (0 = success, >0 = failure)"
              },
              "skipped": {
                "type": "boolean",
                "description": "Tool was skipped (e.g., not installed)"
              },
              "reason": {
                "type": "string",
                "description": "Reason for skipping (if skipped=true)"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "runMetadata": {
      "type": "object",
      "description": "Optional runtime metadata (NOT part of deterministic core)",
      "properties": {
        "generatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp (e.g., '2026-01-10T12:00:00Z')"
        },
        "executionTime": {
          "type": "number",
          "minimum": 0,
          "description": "Total execution time in milliseconds"
        },
        "profile": {
          "type": "string",
          "description": "Profile used (e.g., 'solo', 'dev', 'team')"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
